{
  "name": "@chimeraprime/react-dev-cli",
  "version": "1.0.1",
  "description": "Command tool to improve React development",
  "main": "index.js",
  "bin": {
    "rdc": "./index.js"
  },
  "scripts": {
    "test": "mocha $(find . -name '*.spec.js' ! -ipath '*node_modules*')",
    "test:watch": "yarn test -- -w",
    "lint": "eslint ./",
    "lint:fix": "yarn lint --fix"
  },
  "husky": {
    "hooks": {
      "pre-commit": "bin/pre-commit.sh"
    }
  },
  "keywords": [
    "react",
    "cli",
    "javascript",
    "dev-tools"
  ],
  "author": "Daniel Siwek",
  "license": "MIT",
  "dependencies": {
    "colors": "1.3.2",
    "commander": "2.18.0",
    "fs-extra": "7.0.0",
    "replace": "1.0.0"
  },
  "devDependencies": {
    "@chimeraprime/eslint-config-chimera-prime": "1.0.4",
    "chai": "4.1.2",
    "eslint": "5.6.0",
    "husky": "1.2.0",
    "mocha": "5.2.0",
    "mock-fs": "4.7.0",
    "sinon": "6.3.4",
    "sinon-chai": "3.2.0"
  }
}
